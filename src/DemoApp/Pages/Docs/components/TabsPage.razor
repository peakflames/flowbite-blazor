        <ComponentExample Title="Tabs with Icons"
                          Description="Use these tabs with icons examples to show additional visual elements alongside the tab items."
                          RazorCode=@(@"
<Tabs>
        <TabListContent>
            <Tab Index=""0"" Icon=""@(new UserIcon())"">Profile</Tab>
