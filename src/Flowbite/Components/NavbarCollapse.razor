
@inherits FlowbiteComponentBase

<div class="@CombineClasses($"w-full md:block md:w-auto {(!MenuOpen ? "hidden" : "")}")">
    <ul class="mt-4 flex flex-col md:mt-0 md:flex-row md:space-x-8 md:text-sm md:font-medium">
        @ChildContent
    </ul>
</div>

@code {
    [CascadingParameter]
    private Navbar? ParentNavbar { get; set; }

    private bool MenuOpen => ParentNavbar?.MenuOpen ?? false;
}
